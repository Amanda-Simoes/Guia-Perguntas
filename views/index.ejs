<!-- Importando o header -->
<%- include("./partials/header.ejs") %> 

<body>

    <!-- Importando o navbar -->
    <%- include("./partials/navbar.ejs") %> 
    
    <div class="container">

        <br>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-success">Perguntar</a>
        <br>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-success">Responder</button></a>
                </div>
            </div>

        <% }) %>

    </div>

</body>

<!-- Importando o footer -->
<%- include("./partials/footer.ejs") %>